{
  "mcpServers": {
    "hegelion": {
      "command": "python",
      "args": [
        "-m",
        "hegelion.mcp_server"
      ],
      "env": {
        "HEGELION_PROVIDER": "anthropic",
        "HEGELION_MODEL": "claude-4.5-sonnet-latest",
        "ANTHROPIC_API_KEY": "your-anthropic-api-key-here",
        "ANTHROPIC_BASE_URL": "https://api.anthropic.com"
      }
    }
  },
  "model": "claude-4.5-sonnet-latest"
}
