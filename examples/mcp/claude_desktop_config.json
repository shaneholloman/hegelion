{
  "mcpServers": {
    "hegelion": {
      "command": "hegelion-server",
      "cwd": "/absolute/path/to/Hegelion",
      "env": {
        "HEGELION_PROVIDER": "anthropic",
        "HEGELION_MODEL": "claude-4.5-sonnet-latest",
        "ANTHROPIC_API_KEY": "your-anthropic-api-key"
      }
    }
  }
}
