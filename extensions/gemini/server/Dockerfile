FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

WORKDIR /app

COPY extensions/gemini/server/requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r /app/requirements.txt

COPY extensions /app/extensions

EXPOSE 8080
ENV PORT=8080

CMD ["uvicorn", "extensions.gemini.server.app:app", "--host", "0.0.0.0", "--port", "8080"]

