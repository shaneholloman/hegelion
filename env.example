# --- Provider Selection ---
# Options: anthropic, openai, google, ollama, custom_http, auto
HEGELION_PROVIDER=anthropic
# Examples: claude-4.5-sonnet-latest, gpt-4o, gemini-2.5-pro, llama3.3
HEGELION_MODEL=claude-4.5-sonnet-latest

# --- Engine Settings ---
HEGELION_SYNTHESIS_THRESHOLD=0.85
HEGELION_MAX_TOKENS_PER_PHASE=10000
HEGELION_VALIDATE_RESULTS=true
HEGELION_CACHE=true
HEGELION_CACHE_TTL_SECONDS=86400
HEGELION_CACHE_DIR=~/.cache/hegelion

# --- Anthropic (Claude) ---
ANTHROPIC_API_KEY=sk-ant-...
# ANTHROPIC_BASE_URL=https://api.anthropic.com

# --- OpenAI / GLM / Compatible ---
OPENAI_API_KEY=sk-...
# OPENAI_BASE_URL=https://api.openai.com/v1
# OPENAI_ORG_ID=org-...

# --- Google (Gemini) ---
GOOGLE_API_KEY=...
# GOOGLE_API_BASE_URL=https://generativelanguage.googleapis.com

# --- Moonshot AI (Kimi) ---
# Required for the "Hegelion Method" training pipeline
MOONSHOT_API_KEY=sk-...
# MOONSHOT_BASE_URL=https://api.moonshot.cn/v1

# --- Ollama (Local) ---
# OLLAMA_BASE_URL=http://localhost:11434

# --- Custom HTTP Backend ---
# CUSTOM_API_BASE_URL=https://your-endpoint.com/v1/generate
# CUSTOM_API_KEY=...
# CUSTOM_API_TIMEOUT=60.0

# --- Logging ---
HEGELION_LOG_LEVEL=WARNING

